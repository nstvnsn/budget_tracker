# Filename: budgettracker.kv


<RecordCellLabel@Label>: # Styling for the cells in each record/row
    canvas.before:
        Color:
            rgba: 0, 0.75, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size


<SelectableRecord@BoxLayout>:
    cols: 3
    pos: self.pos
    size: self.size
    spacing:5              # Provides spacing between each cell
    padding: 10, 0, 10, 5  # Provides padding from the bow walls and above/below each record

    RecordCellLabel:
        id: 'date_col'
        text: 'DummyDate'
        padding_x: 5

    RecordCellLabel:
        id: 'expense_col'
        text: 'DummyExpense'

    RecordCellLabel:
        id: 'cost_col'
        text: 'DummyCost'

<RecordsRecycleView@RecycleView>:
    viewclass: 'SelectableRecord'
    canvas.before:
        Color:
            rgba: 0, 0.35, 0.5, 1
        Rectangle:
            pos: self.pos
            size: self.size
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'


<RecordsHeader@GridLayout>:
    cols: 3
    size_hint_y: None
    height: 60

    canvas.before:
        Color:
            rgba: 0.3, 0.3, 0.3, 1

        Rectangle:
            pos: self.pos
            size: self.size


    Label:
        text: "Date"
    Label:
        text: "Expense"
    Label:
        text: "Cost"



<MainWindowGrid@GridLayout>:
    rows: 4
    size: root.width, root.height
    rows_minimum:
        {1: 300, 2: 50, 3: 150}
    padding: [25, 0, 25, 25]
    canvas.before:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Rectangle:
            pos: self.pos
            size: self.size


    RecordsHeader:

    RecordsRecycleView:

    Label:
        size_hint_y: None
        height: 60
        text: "Date and Records Select Buttons (Probably nest a float layout)"
        canvas.before:
            Color:
                rgba: 0.3, 0.3, 0.3, 1
            Rectangle:
                pos: self.pos
                size: self.size

    Label:
        size_hint_y: None
        height: 450
        text:  "Add/Remove/Update records buttons (Possibly include export to .xlsx button)"
        canvas.before:
            Color:
                rgba: 0.3, 1, 0.3, 1
            Rectangle:
                pos: self.pos
                size: self.size